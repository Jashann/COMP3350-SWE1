<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpliCook"
        tools:targetApi="34">
        <activity
            android:name=".presentation.PlanListActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.AddRecipeActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".presentation.HomePageActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.DeleteRecipeActivity"
            android:theme="@style/popOut"
            android:exported="true">
        </activity>
        <activity
            android:name=".presentation.RecipeDisplayActivity"
            android:exported="true">
        </activity>
        <activity android:name=".business.SortRecipe" />


    </application>

</manifest>